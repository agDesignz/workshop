<%- include('partials/header') -%>

<section class="main-content container">

  <div class="main-column">

    <div class="main-row">
      <h2>udemy courses</h2>
      <div class="flex-line">
        <% udemy.forEach(mooc => {%>
        <a class="tile udemy-link" href="<%=mooc.link%>">
          <h4><%=mooc.course%></h4>
          <h6><%=mooc.teacher%></h6>
        </a>
        <% }) %>
      </div>
    </div>

    <div class="main-row">
      <h2>coursera courses</h2>
      <div class="flex-line">
        <% coursera.forEach(mooc => {%>
        <a class="tile coursera-link" href="<%=mooc.link%>">
          <h4><%=mooc.course%></h4>
          <h6><%=mooc.teacher%></h6>
        </a>
        <% }) %>
      </div>
    </div>

    <div class="main-row">
      <h2>course resources</h2>
      <div class="flex-line">
        <% courseRsrcs.forEach(crs => {%>
        <a class="tile udemy-link" href="<%=crs.link%>">
          <img src="/img/<%=crs.icon%>" />
          <% if(crs.title) { %>
          <h6><%=crs.title%></h6>
          <% } %>
        </a>
        <% }) %>
      </div>
    </div>

    <div class="main-row">
      <h2>other resources</h2>
      <div class="flex-line">
        <% otherRsrcs.forEach(crs => {%>
        <a class="tile" href="<%=crs.link%>">
          <img src="/img/<%=crs.icon%>" />
          <% if(crs.title) { %>
          <h6><%=crs.title%></h6>
          <% } %>
        </a>
        <% }) %>
      </div>
    </div>

  </div>

  <div class="main-column projects-column">
      <h2>projects</h2>

    <div class="projects-box">

      <% projects.forEach( project => { %>
      <form action="/delete" method="post">
        <a href="<%= project.link %>" class="project-link">
          <div class="item glazed">
            <h4><%=project.name%></h4>
            <input onChange="this.form.submit()" type="checkbox" name="checkbox" value="<%= project._id %>" />
          </div>
        </a>
      </form>

      <% }) %>

    </div>
<button id="add-button" class="project-button"><h4>Add a Project</h4></button>
  </div>

</section>

<div id="input-modal" class="modal">
  <div class="input-box">
    <form class="projects-input" action="/" method="post">
      <input class="glazed" type="text" name="newProject" placeholder="Add an item" autocomplete="off" />
      <button class="project-button" type="submit" name="projectsList" value="newProject">Add a Project</button>
    </form>
  </div>
</div>
